<!DOCTYPE html>
<html>
  <head>
    <title>RandomApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  

<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <a class="navbar-brand" href="#">BLENDER</a>
  <%= image_tag("blender.jpg", width: "30px", height: "30px")%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" <%= link_to 'Home', homes_path %> </a>
      
      </li>
      <li class="nav-item">
        <a class="nav-link" <%= link_to 'Blend-it', posts_path %> </a>
      </li>

        <li class="nav-item">
        <a class="nav-link" <%= link_to 'Feedback', reviews_path %> </a>
      </li>
      
    </ul>



<% if user_signed_in? %>
 <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      Welcome
      <%= current_user.email %>
      </li> 
      </ul>

      <%end%>
      


    <div>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="What are you looking for?">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    </div>




  </div>
</nav>

    <%= yield %>
  </body>
</html>
